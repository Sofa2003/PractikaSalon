                        <Label x:Name="lbsotrudnik" Content="Sotrudnik" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="101,61,0,0"/>
                    </Border>
                    <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,10" RenderTransformOrigin="0.497,0.493">
