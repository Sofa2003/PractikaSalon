        <Button x:Name="btaddsotrudnik" Content="Перейти к сотрудникам" HorizontalAlignment="Left" Margin="592,30,0,0" VerticalAlignment="Top" Height="43" Width="187" Click="btaddsotrudnik_Click"/>

        <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Background}" Margin="34,122,596,66">
            <Grid>
                <StackPanel x:Name="PanelEmp" Margin="0,5,5,5">
                    <Image Width="122" Height="95" Margin="5" Source="/Image/78-786207_user-avatar-png-user-avatar-icon-png-transparent.png"/>
                    <TextBlock Text="Imi" FontWeight="Bold" TextAlignment="Center"/>
                    <TextBlock Text="Familia" TextAlignment="Center"/>
                    <TextBlock Text="Othestvo" TextAlignment="Center"/>
                    <TextBlock Text="Telefon" TextAlignment="Center"/>
                    <TextBlock Text="Email" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <Label x:Name="lbtext" Content="" HorizontalAlignment="Left" Margin="34,29,0,0" VerticalAlignment="Top"/>
    </Grid>
</Page>