<Page x:Class="PractikaSalon.Pages.Klient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PractikaSalon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Klient">

    <Grid>
        <Button x:Name="btaddklient" Content="Добавить клиента" HorizontalAlignment="Left" Margin="240,30,0,0" VerticalAlignment="Top" Height="43" Width="160" Click="btaddklient_Click"/>
